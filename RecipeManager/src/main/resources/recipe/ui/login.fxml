<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="recipe.ui.LoginController" hgap="10" vgap="10" padding="20">
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" minWidth="100"/>
        <ColumnConstraints hgrow="ALWAYS"/>
    </columnConstraints>

    <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <HBox spacing="10" GridPane.rowIndex="2" GridPane.columnIndex="1">
        <Button fx:id="loginButton" text="Login" onAction="#onLogin"/>
        <Button fx:id="registerButton" text="Register" onAction="#onRegister"/>
        <Button fx:id="skipButton" text="Skip Login" onAction="#onSkip"/>
    </HBox>
</GridPane>
